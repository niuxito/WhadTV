#banrBox {
	z-index: 1; position: relative; display: inline-block; width: 970px; height: 345px; padding: 0 0 5px; margin: 0 auto 10px;
}
#banrBox .cntnBox {
	z-index: 2; position: relative; overflow: hidden; width: 970px; height: 325px; background: #333;
	-moz-box-shadow: 0 0 5px #999; -webkit-box-shadow: 0 0 5px #999; box-shadow: 0 0 5px #999;
}

#banrBox .banr {
	z-index: 3; position: absolute; top: 0; left: 0; overflow: hidden; width: 970px; height: 325px; display: none;
	background: #333 url(../img/loader_blk.gif) center center no-repeat;
	
}
#banrBox .banr .bkImg {width: 970px; height: 325px; display: none}
#banrBox .banr .boxInf {position: absolute; bottom: 0; left: 0px; overflow: hidden; width: auto; color: #fff}
