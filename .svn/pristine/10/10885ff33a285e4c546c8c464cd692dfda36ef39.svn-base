/* buttons */

#banrBox .btLft, #banrBox .btRgt, #banrBox .btInf {
	z-index: 4; position: absolute; overflow: hidden; padding: 0; cursor: pointer;
	font-size: 25px; line-height: 25px; -moz-user-select: none; -khtml-user-select: none; user-select: none;
	
}
#banrBox .btLft, #banrBox .btRgt {top: 0; left: -12px; width: 50px; height: 100%}
#banrBox .btRgt {left: auto; right: -13px; text-align: right}
#banrBox .btLft img, #banrBox .btRgt img {margin-top: 150px; width: 20px; height: 27px; overflow: hidden}
#banrBox .btLft img {background: url(../img/btn_slide_left.png) 0 0  no-repeat}
#banrBox .btRgt img {background: url(../img/btn_slide_right.png) 0 0  no-repeat}
#banrBox .btLft:hover img, #banrBox .btRgt:hover img {background-position: 0 -28px}

#banrBox .btXtr {
	position: absolute; width: 970px; height: 9px; bottom: 13px; left: 50%; margin-left: -485px; text-align: center;
}

	#banrBox .btMv {
		position: relative; overflow: hidden; display: inline-block; width: 27px; height: 27px; margin: 0; cursor: pointer;
		background: url(../img/slide_btn_crcl.png) 0 0 no-repeat;
	}
	#banrBox .btMv.up, #banrBox .btMv:hover {background-position: 0 -27px}
